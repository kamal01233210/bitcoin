<html>
<% include header %>

<h1>BTC USD Convertor</h1>
<input type="text" name="" id="btc" value="1" onkeyup="btcused();"> = 
<input type="text" name="" id="usd" value="<%= lastPrice %>" onkeyup="usdbtc();"> 

<script type="text/javascript">
	function btcused(){
		var market_price = <%= lastPrice %>;
		var btc_value = document.getElementById("btc").value;
		var calc = btc_value*market_price;
		document.getElementById("usd").value = calc.toFixed(2);
	}

	function usdbtc(){
		var market_price = <%= lastPrice %>;
		var usd_value = document.getElementById("usd").value;
		var calc = usd_value*market_price;
		document.getElementById("btc").value = calc.toFixed(8);
	}
</script>
</html>
	